<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.afs_leo.join_data"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="親愛的使用者您好: 請填寫正確的識別碼以順利註冊會員，謝謝您。"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/join_shape"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="識別碼"
            android:id="@+id/textView9"
            android:layout_gravity="center_vertical"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="#555555" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView13"
            android:background="@drawable/s_line"
            android:layout_marginLeft="0dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/code"
            android:inputType="none"
            android:layout_weight="1"
            android:background="@drawable/no_frame"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="0dp" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="確認送出"
        android:id="@+id/btn_check_code"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="#3285c3"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="略過"
        android:id="@+id/btn_pass"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="#3285c3"
        android:layout_marginTop="20dp" />


</LinearLayout>