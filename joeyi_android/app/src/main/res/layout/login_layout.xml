<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/linear_max"
    android:background="#ffffff">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/top_logo"
        android:src="@drawable/top_logo"
        android:scaleType="centerInside"
        android:visibility="gone" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView3"
            android:scaleType="fitXY"
            android:layout_weight="1.0"
            android:src="@drawable/banner" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_shape">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/liner_login_id">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:src="@drawable/icon1"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/login_id"
                android:background="@drawable/no_frame"
                android:hint="請輸入您的帳號"
                android:textColorHint="#666666"/>

        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/white_line"
            android:scaleType="centerInside" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/liner_login_id123">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/icon2"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_pwd"
                android:singleLine="true"
                android:background="@drawable/no_frame"
                android:inputType="textPassword"
                android:hint="請輸入您的密碼"
                android:textColorHint="#666666" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:weightSum="10">
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="記住登入資訊"
            android:textSize="20sp"
            android:textColor="#555555"
            android:id="@+id/chk_remember_id"
            android:layout_weight="5.1"
            android:checked="false" />
        <Button
            android:text="忘記密碼"
            android:textSize="20sp"
            android:textColor="#555555"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:id="@+id/txv_get_pwd"/>

        <Button
            android:text="註冊"
            android:textSize="20sp"
            android:textColor="#555555"
            android:background="#00000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:id="@+id/txv_sign_up" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2.0">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_login"
            android:layout_marginRight="5dp"
            android:background="@drawable/login"
            android:scaleType="centerInside"
            android:layout_weight="1.0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/btn_explan"
            android:scaleType="centerInside"
            android:layout_weight="1.0"
            android:background="@drawable/instr" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:visibility="visible">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#a5c1d4"
            android:layout_alignParentBottom="true">
            <TextView
                android:text=""
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="版本號:"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:text=""
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_version"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>