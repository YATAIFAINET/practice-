<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#AFFFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_name"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:src="@drawable/product"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_marginBottom="1dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:text=""
                android:id="@+id/txv_product_id"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:text="123123123"
                android:id="@+id/txv_product_name"
                android:maxLines = "2"
                android:ellipsize="end"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:textColor="#555555"
                android:singleLine="true" />

            <TextView
                android:id="@+id/prod_summary"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:layout_marginTop="5dp"
                android:textColor="#888888" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="3.0"
                android:layout_gravity="bottom">

                <TextView
                    android:text="$"
                    android:textColor="#EE2C2C"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:visibility="visible"
                    android:id="@+id/NTD" />
                <TextView
                    android:text=""
                    android:id="@+id/txv_product_money"
                    android:layout_gravity="left"
                    android:textColor="#EE2C2C"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_weight="1.0" />

                <TextView
                    android:text="CV"
                    android:textColor="#888888"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"

                    android:id="@+id/PV" />

                <TextView
                    android:text=""
                    android:id="@+id/txv_product_pv"
                    android:layout_gravity="left"
                    android:textColor="#888888"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_weight="1.0"/>

                <TextView
                    android:text="MV"
                    android:textColor="#888888"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/MV" />
                <TextView
                    android:text=""
                    android:id="@+id/txv_product_mv"
                    android:layout_gravity="left"
                    android:textColor="#888888"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1.0"/>

            </LinearLayout>
            <!--       <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="2.0">
                       <TextView
                           android:text="規格："
                           android:textSize="20sp"
                           android:layout_marginTop="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="100包/50裝/1234567899454564"
                           android:id="@+id/txv_product_standard"
                           android:singleLine="true"
                           android:ellipsize="end"
                           android:textSize="20sp"
                           android:layout_marginTop="5dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>-->
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:id="@+id/imageView31"
        android:background="#cccccc" />

</LinearLayout>