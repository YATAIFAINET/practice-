<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBar</item>
        <item name="android:actionBarSize">40dp</item>
        <item name="android:fastScrollThumbDrawable">@drawable/ad_arden</item>


    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#F29500</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Holo.Widget.ActionBar.Title.Own</item>



    </style>
    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Own"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>




    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <!-- 更换背景图片实现全白 -->
        <item name="android:windowBackground">@drawable/bg</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 沒有標題 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#FF000000</item>


    </style>

    <style name="AlertDialogTheme" parent="android:Theme.Dialog">
        <item name="android:textSize">18sp</item>
    </style>




</resources>